<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calckulator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iessabadell.yosef.calkulator.Calkulator">

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:id="@+id/opertation"
        android:fontFamily="sans-serif"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"
        android:layout_height="46dp" />
    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:id="@+id/result"
        android:textSize="36sp"
        android:layout_below="@+id/opertation"
        android:textColor="@android:color/white"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBlank"
                android:textSize="30sp"
                />
            <Button
                android:text="M+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMplus"
                android:textSize="30sp"
                />
            <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn7"
                android:textSize="30sp"/>
            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn4"
                android:textSize="30sp"
                />
            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn1"
                android:textSize="30sp"
                />
            <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn0"
                android:textSize="30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBlank2"
                android:textSize="30sp"
                />
            <Button
                android:text="M-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMmenus"
                android:textSize="30sp"
                />
            <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn8"
                android:textSize="30sp"/>
            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn5"
                android:textSize="30sp"
                />
            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn2"
                android:textSize="30sp"
                />
            <Button
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/point"
                android:textSize="30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:text="DEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete"
                android:textSize="30sp"
                />
            <Button
                android:text="Mr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMrecover"
                android:textSize="30sp"
                />
            <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn9"
                android:textSize="30sp"/>
            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn6"
                android:textSize="30sp"
                />
            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn3"
                android:textSize="30sp"
                />
            <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/equal"
                android:textSize="30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:text="AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleteAll"
                android:textSize="30sp"
                />
            <Button
                android:text="Mc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMclear"
                android:textSize="30sp"
                />
            <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDivision"
                android:textSize="30sp"
                />
            <Button
                android:text="x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMultiplication"
                android:textSize="30sp"/>
            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMenus"
                android:textSize="30sp"
                />
            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPlus"
                android:textSize="30sp"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
